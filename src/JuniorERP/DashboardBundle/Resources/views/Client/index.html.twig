{# src/JuniorDashboard/ClientsBundle/Resources/views/Clients/index.html.twig #}

{% extends "JuniorERPDashboardBundle::layout.html.twig" %}

{% block sidebar_list %}
	<li><a href="{{ path('JuniorERPDashboardBundle_client_index') }}" class="active"><span class="nav-icon dboard-icon"></span> Liste des Clients <span class="active-nidicator">&nbsp;</span></a></li>
	<li><a href="{{ path('JuniorERPDashboardBundle_client_ajouter') }}"><span class="nav-icon typo-icon"></span> Ajouter un Client </a></li>
	{% endblock %}

{% block content %}

<div id="content">
	<div class="container_12">
	<div class="widget-panel grid_12">
		<div class="widget-top">
			<h4>Liste des clients</h4>
		</div>
		<div class="widget-content module">
			<table class="display data-table">
				<thead>
					<tr>
						<th>Societe</th>
						<th>Nom</th>
						<th>Prenom</th>
						<th>E-mail</th>
					</tr>
				</thead>
				<tbody>
					{% for client in clients %}
					<tr>
						<td>{{ client.societe }}</td>
						<td>{{ client.nom }}</td>
						<td>{{ client.prenom }}</td>
						<td>{{ client.email }}</td>
					</tr>
					{% endfor %}
					
				</tbody>
			</table>
		</div>
	</div>
	</div>
</div>

{% endblock %}


